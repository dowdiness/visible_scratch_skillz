<p id="notice"><%= notice %></p>

<h1>Charts</h1>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% if @charts.any? %>
    <% @charts.each do |chart| %>
      <tr>
        <td><%= chart.title %></td>
        <td><%= link_to 'Show', chart %></td>
        <td><%= link_to 'Destroy', chart, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  <% else %>
    <p>There is no routine you saved.</p>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Chart', new_chart_path %>
