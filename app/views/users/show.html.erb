<p id="notice"><%= notice %></p>

<%= javascript_pack_tag 'charts_index' %>

<nav class="panel">
  <p class="panel-heading">
    <%= @user.email %>'s Routines
  </p>
  <% if @charts.any? %>
    <% @charts.each do |chart| %>
      <div class="panel-block is-justify-content-flex-end">
        <div class="chart-title"><%= link_to chart.title, chart %></div>
<!--        <div class="panel-sub"><a href="<%#= rails_storage_proxy_url(chart.image) %>">link</a></div>-->
        <div class="panel-sub vss-image-url">
          <input type="hidden" value="<%= rails_storage_proxy_url(chart.image) %>">
          <button class="vss-copy-button button">Copy</button>
        </div>
<!--        <div class="panel-sub"><input type="text" value="test"><button id="copy">Copy</button></div>-->
        <div class="panel-sub"><%= link_to 'Delete', chart, method: :delete, data: { confirm: 'Are you sure?' } if @user == current_user %></div>
      </div>
    <% end %>
  <% else %>
    <p>There is no routine you saved.</p>
  <% end %>
</nav>
<br>

